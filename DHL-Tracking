<script>
  // only this tracking number reveals the details
  const VALID = "3214567890";

  function track(){
    const val = document.getElementById("tn").value.trim();
    const status = document.getElementById("status");
    const eta = document.getElementById("eta");
    const history = document.getElementById("history");
    const updates = document.getElementById("updates");

    if(val === VALID){
      status.style.display = "block";
      status.textContent = "Status: In Transit üöö";
      eta.style.display = "block";
      history.style.display = "table";
      updates.style.display = "block";
    }else if(val){
      status.style.display = "block";
      status.textContent = "‚ö† Tracking number not found.";
      eta.style.display = "none";
      history.style.display = "none";
      updates.style.display = "none";
    }else{
      status.style.display = "block";
      status.textContent = "‚ö† Please enter a valid tracking number.";
      eta.style.display = "none";
      history.style.display = "none";
      updates.style.display = "none";
    }
  }
</script>
